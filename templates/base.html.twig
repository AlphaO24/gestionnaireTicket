<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <!-- Navbar -->
      {% block navbar %}
      <div class="w3-bar w3-border w3-light-grey">
        {% set currentPath = path(app.request.attributes.get('_route'))%}
        {% if currentPath starts with '/status/' %}
        <a href="#" class="w3-bar-item w3-button">Home</a>
        <a href="{{path('Status_create')}}" class="w3-bar-item w3-button">Create</a>
        <a href="{{path('Status_show')}}" class="w3-bar-item w3-button">Read</a>
        <a href="#" class="w3-bar-item w3-button">Delete</a>
        <a href="#" class="w3-bar-item w3-button">Update</a>
        {% else %}
        <a href="#" class="w3-bar-item w3-button">Home</a>
        <a href="#" class="w3-bar-item w3-button">Link 1</a>
        <a href="#" class="w3-bar-item w3-button">Link 2</a>
        {% endif %}
      </div>
      {% endblock %}

      <!-- Sidebar -->
      <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:10%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="{{path('index')}}" class="w3-bar-item w3-button">Ticket</a>
        <a href="{{path('Status_show')}}" class="w3-bar-item w3-button">Status</a>
        <a href="#" class="w3-bar-item w3-button">Link 3</a>
      </div>
        <div style="margin-left:10%">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
